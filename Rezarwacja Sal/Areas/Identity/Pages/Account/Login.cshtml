@page
@model LoginModel

@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="d-flex align-items-center justify-content-center" style="min-height:60vh;">
    <div class="card shadow-lg rounded-3" style="max-width: 520px; width:100%;">
        <div class="card-header text-white" style="background: linear-gradient(135deg, #343a40, #495057);">
            <div class="d-flex align-items-center gap-2 justify-content-center py-1">
                <i class="bi bi-shield-lock-fill"></i>
                <span class="fw-semibold">@ViewData["Title"]</span>
            </div>
        </div>
        <div class="card-body p-4">
            <form id="account" method="post" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label">Hasło</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Zapamiętaj mnie</label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-success w-100 btn-icon-text">
                    <i class="bi bi-unlock-fill"></i>Zaloguj
                </button>

                <div class="d-flex justify-content-center gap-3 mt-3 small">
                    <a id="forgot-password" asp-page="./ForgotPassword">Zapomniałeś hasła?</a>
                    <span class="text-muted">•</span>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Rejestracja</a>
                    <span class="text-muted">•</span>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Wyślij potwierdzenie</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
