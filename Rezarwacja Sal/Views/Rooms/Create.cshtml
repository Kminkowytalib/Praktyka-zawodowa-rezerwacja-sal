@model Rezarwacja_Sal.Models.Room
@{
    ViewData["Title"] = "Dodaj salę";
}
<h1 class="mb-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-lg-8 col-xl-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Nazwa sali" />
                        <label for="Name">Nazwa sali</label>
                        <small class="form-text text-muted d-block mt-1">Podaj nazwę sali; musi być unikatowa w ramach tej samej lokalizacji.</small>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-7">
                            <div class="form-floating">
                                <input asp-for="Location" class="form-control" placeholder="Lokalizacja" />
                                <label for="Location">Lokalizacja</label>
                            </div>
                            <small class="form-text text-muted d-block mt-1">Np. „Budynek A, piętro 1, pokój 101”.</small>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="col-md-5">
                            <div class="form-floating">
                                <input asp-for="Capacity" class="form-control" placeholder="Pojemność" />
                                <label for="Capacity">Pojemność</label>
                            </div>
                            <small class="form-text text-muted d-block mt-1">Liczba miejsc siedzących.</small>
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-floating mt-3">
                        <textarea asp-for="Equipment" class="form-control" style="height: 120px" placeholder="Wyposażenie"></textarea>
                        <label for="Equipment">Wyposażenie</label>
                    </div>
                    <small class="form-text text-muted d-block mt-1">Krótki opis: projektor, TV, tablica, itp.</small>
                    <span asp-validation-for="Equipment" class="text-danger"></span>

                    <div class="form-check form-switch mt-3">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" for="IsActive">Aktywna (dostępna do rezerwacji)</label>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Zapisz</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
