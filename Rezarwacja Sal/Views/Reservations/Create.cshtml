@model Rezarwacja_Sal.Models.Reservation
@{
    ViewData["Title"] = "Nowa rezerwacja";
}
<h1 class="mb-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-lg-8 col-xl-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <form asp-action="Create" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label class="form-label" for="RoomId">Sala</label>
                        <select asp-for="RoomId" class="form-select" asp-items="ViewBag.RoomId"></select>
                        <small class="form-text text-muted">Wybierz aktywną salę, w której chcesz zrobić rezerwację.</small>
                        <span asp-validation-for="RoomId" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StartAt" class="form-control" type="datetime-local" placeholder="Data i godzina rozpoczęcia" />
                                <label for="StartAt">Data i godzina rozpoczęcia</label>
                            </div>
                            <small class="form-text text-muted d-block mt-1">Początek rezerwacji (czas w przyszłości).</small>
                            <span asp-validation-for="StartAt" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="EndAt" class="form-control" type="datetime-local" placeholder="Data i godzina zakończenia" />
                                <label for="EndAt">Data i godzina zakończenia</label>
                            </div>
                            <small class="form-text text-muted d-block mt-1">Musi być później niż początek.</small>
                            <span asp-validation-for="EndAt" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-floating mt-3">
                        <input asp-for="Title" class="form-control" placeholder="Tytuł" />
                        <label for="Title">Tytuł</label>
                    </div>
                    <small class="form-text text-muted d-block mt-1">Krótki tytuł spotkania lub celu rezerwacji.</small>
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <div class="form-floating mt-3">
                        <textarea asp-for="Notes" class="form-control" style="height: 120px" placeholder="Notatki"></textarea>
                        <label for="Notes">Notatki</label>
                    </div>
                    <small class="form-text text-muted d-block mt-1">Dodatkowe informacje dla organizatorów lub uczestników (opcjonalnie).</small>
                    <span asp-validation-for="Notes" class="text-danger"></span>

                    <div class="mt-3">
                        <label class="form-label" for="attachment">Załącznik (opcjonalnie)</label>
                        <input type="file" id="attachment" name="attachment" class="form-control" accept=".pdf,.doc,.docx,.xlsx,.pptx,.png,.jpg,.jpeg,.txt" />
                        <small class="text-muted">Dozwolone: PDF/DOC/DOCX/XLSX/PPTX/PNG/JPG/TXT. Maks. 20 MB.</small>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">Złóż prośbę</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        // Bootstrap 5 + native validation
        (function () {
            const form = document.querySelector('form.needs-validation');
            const start = document.getElementById('StartAt');
            const end = document.getElementById('EndAt');

            function toLocalDatetimeValue(date) {
                const pad = n => String(n).padStart(2, '0');
                return `${date.getFullYear()}-${pad(date.getMonth() + 1)}-${pad(date.getDate())}T${pad(date.getHours())}:${pad(date.getMinutes())}`;
            }

            function setMins() {
                const now = new Date();
                const nowVal = toLocalDatetimeValue(now);
                if (start && !start.min) start.min = nowVal;
                if (end) {
                    const s = start && start.value ? new Date(start.value) : now;
                    end.min = toLocalDatetimeValue(s);
                }
            }

            function validateRange() {
                if (!start || !end) return;
                end.setCustomValidity('');
                if (start.value && end.value) {
                    const s = new Date(start.value);
                    const e = new Date(end.value);
                    if (e <= s) {
                        end.setCustomValidity('Data zakończenia musi być późniejsza niż rozpoczęcia.');
                    }
                }
            }

            document.addEventListener('DOMContentLoaded', () => {
                setMins();
                validateRange();
            });
            start?.addEventListener('change', () => { setMins(); validateRange(); });
            end?.addEventListener('change', validateRange);

            form?.addEventListener('submit', function (e) {
                setMins();
                validateRange();
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        })();
    </script>
}
